generator client {
  provider = "prisma-client"
  // el client se va a generar en ./generated/prisma
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  AGENT
  ADMIN
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  PENDING
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role   @default(USER)

  avatarUrl String?
  timezone  String  @default("America/Argentina/Buenos_Aires")

  notifOnAssigned   Boolean @default(true)
  notifOnComment    Boolean @default(true)
  notifOnResolved   Boolean @default(true)

  tokenVersion Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  ticketsCreated  Ticket[] @relation("TicketCreator")
  ticketsAssigned Ticket[] @relation("TicketAssignee")
  comments        Comment[]
}

 enum TicketCategory {
  ACCESS
  HARDWARE
  SOFTWARE
  NETWORK
  BUG
  OTHER
  FEATURE
  PAYMENTS
  }


model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      String   @default("OPEN")
  priority    String   @default("MEDIUM")
  category    TicketCategory @default(OTHER)
  createdAt   DateTime @default(now())

  creatorId Int
  creator   User @relation("TicketCreator", fields: [creatorId], references: [id])

  assigneeId Int?
  assignee   User? @relation("TicketAssignee", fields: [assigneeId], references: [id])

  comments Comment[]
}



model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  ticketId  Int
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  imageUrl  String?
  createdAt DateTime @default(now())
}
